{
  "author": "igorlogius",
  "homepage_url": "https://github.com/igorlogius/webextensions/tree/main/open-in-sidebar",
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2,
  "name": "Open in Sidebar",
  "description": "Open links, pages or bookmarks in the sidebar",
  "version": "1.0.1",

  "sidebar_action": {
    "default_icon": "icon.png",
    "open_at_install": false,
    "default_panel": "panel.html"
  },
  "permissions": [
    "menus",
    "bookmarks",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],
  "icons": {
    "512": "icon.png"
  }
}
